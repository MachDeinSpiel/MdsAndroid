<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="FragmentMap" >


	    <ScrollView
	        android:id="@+id/scrollViewLocation"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent" >
	        
	    	<LinearLayout        
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:orientation="vertical" >                

	    		<TextView
		         	android:id="@+id/labelLocation"
		         	android:layout_width="match_parent"
		         	android:layout_height="0dp"
		         	android:layout_weight="1"
		         	android:gravity="center"
		         	android:minHeight="40dp"
		         	android:text="Location"
		         	android:textSize="25sp" 
		         	android:layout_marginBottom="10dp"/>
	
		        <TableLayout
		            android:layout_width="fill_parent"
		            android:layout_height="fill_parent" >
		
		            <TableRow
		                android:layout_width="fill_parent"
		                android:layout_height="fill_parent" >
		
		                <LinearLayout
		                    android:layout_width="fill_parent"
		                    android:layout_height="fill_parent"
		                    android:orientation="horizontal" >
		
		                    <TextView
		                        android:id="@+id/txtLat"
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content"
		                        android:layout_column="0"
		                        android:layout_weight="12.18"
		                        android:text="Latitude:"
		                        android:textAppearance="?android:attr/textAppearanceLarge" />
		
		                    <TextView
		                        android:id="@+id/txtLatVal"
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content"
		                        android:layout_column="4"
		                        android:textAppearance="?android:attr/textAppearanceMedium" />
		                </LinearLayout>
		            </TableRow>
		
		            <TableRow
		                android:layout_width="fill_parent"
		                android:layout_height="fill_parent" >
		
		                <LinearLayout
		                    android:layout_width="fill_parent"
		                    android:layout_height="fill_parent"
		                    android:orientation="horizontal" >
		
		                    <TextView
		                        android:id="@+id/txtLong"
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content"
		                        android:layout_column="0"
		                        android:text="Longitude:"
		                        android:textAppearance="?android:attr/textAppearanceLarge" />
		
		                    <TextView
		                        android:id="@+id/txtLongVal"
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content"
		                        android:layout_column="4"
		                        android:textAppearance="?android:attr/textAppearanceMedium" />
		                </LinearLayout>
		            </TableRow>
		
		            <TableRow
		                android:layout_width="fill_parent"
		                android:layout_height="fill_parent" >
		
		                <LinearLayout
		                    android:layout_width="fill_parent"
		                    android:layout_height="fill_parent"
		                    android:orientation="horizontal" >
		
		                    <TextView
		                        android:id="@+id/txtGPS"
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content"
		                        android:layout_column="0"
		                        android:text="GPS-Status:"
		                        android:textAppearance="?android:attr/textAppearanceSmall" />
		
		                    <TextView
		                        android:id="@+id/txtGPSVal"
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content"
		                        android:layout_column="5"
		                        android:gravity="left"
		                        android:textAppearance="?android:attr/textAppearanceSmall" />
		                </LinearLayout>
		            </TableRow>
		
		            <TableRow
		                android:layout_width="fill_parent"
		                android:layout_height="fill_parent"
		                android:layout_marginTop="100px"
		                android:gravity="center_vertical|center_horizontal" >
		
		                <LinearLayout
		                    android:id="@+id/placeholder"
		                    android:layout_width="fill_parent"
		                    android:layout_height="fill_parent"
		                    android:orientation="vertical" >
		                </LinearLayout>
		            </TableRow>
		
		            <TableRow
		                android:layout_width="fill_parent"
		                android:layout_height="fill_parent"
		                android:gravity="center_vertical|center_horizontal" >
		
		                <LinearLayout
		                    android:id="@+id/linearLayout"
		                    android:layout_width="fill_parent"
		                    android:layout_height="fill_parent"
		                    android:layout_weight="1"
		                    android:orientation="vertical" >
		
		                    <Button
		                        android:id="@+id/btnCloseAppMap"
		                        android:layout_width="fill_parent"
		                        android:layout_height="wrap_content"
		                        android:text="Close App" />
		                </LinearLayout>
		            </TableRow>
		        </TableLayout>
			</LinearLayout>
	    </ScrollView>


</FrameLayout>