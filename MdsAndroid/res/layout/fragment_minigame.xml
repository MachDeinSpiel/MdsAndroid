<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="FragmentMinigame" >

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:id="@+id/scrollViewMinigame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Minigame"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textPunktzahl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Punktzahl"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
                    android:id="@+id/intPoints"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="123"
                    android:inputType="numberSigned"
                    android:text="123" >

                    <requestFocus />
                </EditText>
            </LinearLayout>

            <Button
                android:id="@+id/btnGewonnen"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Gewonnen" />

            <Button
                android:id="@+id/btnVerloren"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Verloren" />
        </LinearLayout>

    </ScrollView>

</FrameLayout>
