<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
    	
    </style>
    
    <!-- Standard Styles -->
    <style name="textColorDefaultBlue" parent="AppBaseTheme">
    	<item name="android:textColor">#0086CC</item>
    	<item name="android:textStyle">bold</item>
    </style> 
    <style name="labelDefault" parent="AppBaseTheme">
    	<item name="android:textColor">#FF7800</item>
    	<item name="android:textStyle">bold</item>
    </style>  
    
    <!-- Dark Style -->
    <style name="textColorDarkBlue" parent="AppBaseTheme">
    	<item name="android:textColor">#1C1C1C</item>
    	<item name="android:textStyle">bold</item>
    </style> 
    <style name="labelDark" parent="AppBaseTheme">
    	<item name="android:textColor">#610B0B</item>
    	<item name="android:textStyle">bold</item>
    </style> 
    <style name="brackgroundColorDark" parent="AppBaseTheme">
    	<item name="android:background">#6E6E6E</item>
	</style>
	    
</resources>
